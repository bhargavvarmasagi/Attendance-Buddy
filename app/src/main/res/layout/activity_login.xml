<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/std"> <!-- Light background -->

    <!-- Title Text aligned above the email field -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Attendance Buddy"
        android:textColor="#CA0537"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#55000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Linear Layout to hold the form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/bgone"
        android:elevation="4dp"
        android:layout_marginHorizontal="32dp"
        android:paddingVertical="24dp"
        android:clipToPadding="true"
        android:layout_gravity="center"
        android:radius="8dp">

        <!-- Email Field -->
        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edit_text"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:fontFamily="sans-serif"
            android:elevation="2dp" /> <!-- Optional elevation for shadow effect -->


        <!-- Password Field -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edit_text"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:fontFamily="sans-serif"
            android:elevation="1dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded_edit_text"
            android:textColor="#000000"
            android:paddingVertical="12dp"
            android:elevation="2dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
